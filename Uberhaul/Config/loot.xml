		<item name="uberMachineGunPartsSchematic"/>
		<item name="uberBowPartsSchematic"/>
		<item name="uberHandgunPartsSchematic"/>
	</append>

	<append xpath="/lootcontainers/lootgroup[@name='schematicsWeaponsArmorT2']">
		<item name="uberRoboticPartsSchematic"/>
		<item name="uberRocketLauncherPartsSchematic"/>
		<item name="uberSteelArmorPartsSchematic"/>
		<item name="uberMilitaryArmorPartsSchematic"/>
	</append>

</Uberhaul>
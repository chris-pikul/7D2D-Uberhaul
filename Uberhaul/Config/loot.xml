    <item name="modDyeSafetyOrange"/>
    <item name="modDyeLemonYellow"/>
    <item name="modDyeChartreuse"/>
    <item name="modDyeLimeGreen"/>
    <item name="modDyeAquamarine"/>
    <item name="modDyeCyan"/>
    <item name="modDyeCobaltBlue"/>
    <item name="modDyeRoyalPurple"/>
    <item name="modDyeMagenta"/>
    <item name="modDyeSalmonPink"/>
    <item name="modDyeJetBlack"/>
